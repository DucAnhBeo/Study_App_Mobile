<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true"
    tools:context=".MainActivityNew">

    <!-- Header với Gradient -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="@drawable/gradient_background"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageViewAvatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/avatar_circle"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/avatar"
            android:elevation="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_white" />
            <TextView
                android:id="@+id/textViewRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Học sinh"
                android:textSize="14sp"
                android:textColor="@color/text_white_secondary" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/settings"
            app:tint="@color/text_white" />
    </LinearLayout>

    <!-- Fragment Container -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Modern Bottom Navigation với Card Design -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNavigationCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/nav_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/bottomNavigationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp">

            <!-- Home Button -->
            <LinearLayout
                android:id="@+id/buttonHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/nav_item_modern_selector"
                android:clickable="true"
                android:focusable="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/homeIconCard"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/nav_icon_background">

                    <ImageView
                        android:id="@+id/homeIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_home"
                        app:tint="@color/nav_home_icon_color" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/homeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/nav_text_color"
                    android:layout_marginTop="4dp"
                    android:alpha="0.8" />

            </LinearLayout>

            <!-- Classroom Button -->
            <LinearLayout
                android:id="@+id/buttonClassroom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/nav_item_modern_selector"
                android:clickable="true"
                android:focusable="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/classroomIconCard"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_classroom"
                        app:tint="@color/nav_icon_inactive" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/classroomLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class"
                    android:textSize="11sp"
                    android:textColor="@color/nav_text_inactive"
                    android:layout_marginTop="4dp"
                    android:alpha="0.6"
                    android:singleLine="true"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Discussion Button -->
            <LinearLayout
                android:id="@+id/buttonDiscussion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/nav_item_modern_selector"
                android:clickable="true"
                android:focusable="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/discussionIconCard"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_discussion"
                        app:tint="@color/nav_icon_inactive" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/discussionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forum"
                    android:textSize="11sp"
                    android:textColor="@color/nav_text_inactive"
                    android:layout_marginTop="4dp"
                    android:alpha="0.6"
                    android:singleLine="true"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Quiz Button -->
            <LinearLayout
                android:id="@+id/buttonQuiz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/nav_item_modern_selector"
                android:clickable="true"
                android:focusable="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/quizIconCard"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_quiz"
                        app:tint="@color/nav_icon_inactive" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/quizLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz"
                    android:textSize="11sp"
                    android:textColor="@color/nav_text_inactive"
                    android:layout_marginTop="4dp"
                    android:alpha="0.6" />

            </LinearLayout>

            <!-- Chatbot Button -->
            <LinearLayout
                android:id="@+id/buttonChatbot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/nav_item_modern_selector"
                android:clickable="true"
                android:focusable="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/chatbotIconCard"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chatbot"
                        app:tint="@color/nav_icon_inactive" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/chatbotLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chatbot"
                    android:textSize="11sp"
                    android:textColor="@color/nav_text_inactive"
                    android:layout_marginTop="4dp"
                    android:alpha="0.6" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
