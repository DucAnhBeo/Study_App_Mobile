<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style cho button chọn lớp -->
    <style name="GradeButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/grade_button_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:background">@drawable/grade_button_selector</item>
        <item name="backgroundTint">@null</item>
    </style>

    <!-- Style cho button chọn sách -->
    <style name="TextbookButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/textbook_button_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">56dp</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:background">@drawable/textbook_button_selector</item>
        <item name="backgroundTint">@null</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>
