<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#E0E0E0"
        android:padding="16dp"
        android:text="Trong 100 ml rượu 40° có chứa."
        android:textSize="18sp"
        android:gravity="center"
        android:scrollbars="vertical"
        android:ellipsize="none"
        android:singleLine="false" />

    <Button
        android:id="@+id/btnAnswer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#6A1B9A"
        android:textColor="@android:color/white"
        android:text="A. 40 ml nước và 60 ml rượu nguyên chất."
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/btnAnswer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#6A1B9A"
        android:textColor="@android:color/white"
        android:text="B. 40 ml rượu nguyên chất và 60ml nước."
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/btnAnswer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#6A1B9A"
        android:textColor="@android:color/white"
        android:text="C. 40 gam rượu nguyên chất và 60 gam nước."
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/btnAnswer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#6A1B9A"
        android:textColor="@android:color/white"
        android:text="D. 40 gam nước và 60 gam rượu nguyên chất."
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scrollbars="horizontal" />

</LinearLayout>


