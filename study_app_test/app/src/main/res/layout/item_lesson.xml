<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewLessonTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề bài học"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textViewLessonDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả bài học"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/textViewDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 phút"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginBottom="16dp"
            android:drawableStart="@android:drawable/ic_media_play"
            android:drawablePadding="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/buttonReadLecture"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đọc bài giảng"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonWatchVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem video"
                android:textSize="12sp"
                android:backgroundTint="#FF5722" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
