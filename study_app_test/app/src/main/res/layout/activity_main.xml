<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".MainActivity">

    <!-- Header với Gradient -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="@drawable/gradient_background"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageViewAvatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/avatar_circle"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/avatar"
            android:elevation="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_white" />
            <TextView
                android:id="@+id/textViewRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/role"
                android:textSize="14sp"
                android:textColor="@color/text_white"
                android:alpha="0.9" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/settings"
            android:src="@drawable/ic_settings"
            app:tint="@color/text_white" />
    </LinearLayout>

    <!-- Main content -->
    <ScrollView
        android:id="@+id/contentFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/footerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Welcome Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewSystemTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎓 Hệ thống học tập"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Chọn lớp và sách giáo khoa"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Grade Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📚 Chọn lớp học"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:textColor="@color/text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonGrade6"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="Lớp 6"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_margin="6dp"
                            app:cornerRadius="12dp"
                            app:backgroundTint="@color/primary_color"
                            android:textColor="@color/text_white"
                            app:elevation="4dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonGrade7"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="Lớp 7"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_margin="6dp"
                            app:cornerRadius="12dp"
                            app:backgroundTint="@color/primary_color"
                            android:textColor="@color/text_white"
                            app:elevation="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonGrade8"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="Lớp 8"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_margin="6dp"
                            app:cornerRadius="12dp"
                            app:backgroundTint="@color/primary_color"
                            android:textColor="@color/text_white"
                            app:elevation="4dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonGrade9"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="Lớp 9"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_margin="6dp"
                            app:cornerRadius="12dp"
                            app:backgroundTint="@color/primary_color"
                            android:textColor="@color/text_white"
                            app:elevation="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Textbook Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📖 Sách giáo khoa"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:textColor="@color/text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonCanhDieu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/canh_dieu"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_margin="4dp"
                            android:paddingVertical="16dp"
                            app:cornerRadius="12dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/primary_color"
                            app:strokeWidth="2dp"
                            android:textColor="@color/primary_color"
                            app:backgroundTint="@android:color/transparent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonChanTroi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/chan_troi_sang_tao"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_margin="4dp"
                            android:paddingVertical="16dp"
                            app:cornerRadius="12dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/primary_color"
                            app:strokeWidth="2dp"
                            android:textColor="@color/primary_color"
                            app:backgroundTint="@android:color/transparent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonKetNoi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ket_noi_tri_thuc"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_margin="4dp"
                            android:paddingVertical="16dp"
                            app:cornerRadius="12dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/primary_color"
                            app:strokeWidth="2dp"
                            android:textColor="@color/primary_color"
                            app:backgroundTint="@android:color/transparent" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Selected Book Display -->
            <androidx.cardview.widget.CardView
                android:id="@+id/selectedBookLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="✨ Bạn đã chọn"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageViewBook"
                        android:layout_width="140dp"
                        android:layout_height="180dp"
                        android:layout_marginBottom="16dp"
                        android:contentDescription="@string/selected_book"
                        android:src="@drawable/book_image"
                        android:elevation="4dp" />

                    <TextView
                        android:id="@+id/textViewSelectedInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/primary_color"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Modern Footer Navigation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/footerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="28dp"
        app:cardElevation="20dp"
        android:layout_margin="12dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="18dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/footer_modern_gradient">

            <!-- Home Button -->
            <LinearLayout
                android:id="@+id/buttonHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/nav_item_active"
                android:layout_margin="6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/nav_active_icon"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_home"
                        app:tint="@color/text_white"
                        android:contentDescription="@string/home" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/nav_active_text"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Classroom Button -->
            <LinearLayout
                android:id="@+id/buttonClassroom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/nav_item_inactive"
                android:layout_margin="6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:cardCornerRadius="21dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/nav_inactive_bg"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_classroom"
                        app:tint="@color/nav_inactive_icon"
                        android:contentDescription="@string/classroom" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/classroom"
                    android:textSize="11sp"
                    android:textColor="@color/nav_inactive_text"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Discussion Button -->
            <LinearLayout
                android:id="@+id/buttonDiscussion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/nav_item_inactive"
                android:layout_margin="6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:cardCornerRadius="21dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/nav_inactive_bg"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_discussion"
                        app:tint="@color/nav_inactive_icon"
                        android:contentDescription="@string/discussion" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discussion"
                    android:textSize="11sp"
                    android:textColor="@color/nav_inactive_text"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Quiz Button -->
            <LinearLayout
                android:id="@+id/buttonQuiz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/nav_item_inactive"
                android:layout_margin="6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:cardCornerRadius="21dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/nav_inactive_bg"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_quiz"
                        app:tint="@color/nav_inactive_icon"
                        android:contentDescription="@string/quiz" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz"
                    android:textSize="11sp"
                    android:textColor="@color/nav_inactive_text"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Chatbot Button -->
            <LinearLayout
                android:id="@+id/buttonChatbot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/nav_item_inactive"
                android:layout_margin="6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:cardCornerRadius="21dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/nav_inactive_bg"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chat"
                        app:tint="@color/nav_inactive_icon"
                        android:contentDescription="Chatbot" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat AI"
                    android:textSize="11sp"
                    android:textColor="@color/nav_inactive_text"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>