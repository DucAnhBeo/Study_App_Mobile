<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section: Chọn lớp -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📚 Chọn lớp học"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonGrade6"
                        style="@style/GradeButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="Lớp 6" />

                    <Button
                        android:id="@+id/buttonGrade7"
                        style="@style/GradeButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text="Lớp 7" />

                    <Button
                        android:id="@+id/buttonGrade8"
                        style="@style/GradeButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text="Lớp 8" />

                    <Button
                        android:id="@+id/buttonGrade9"
                        style="@style/GradeButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Lớp 9" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Section: Chọn bộ sách -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📖 Chọn bộ sách giáo khoa"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/buttonCanhDieu"
                    style="@style/TextbookButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="🪶 Cánh diều" />

                <Button
                    android:id="@+id/buttonChanTroi"
                    style="@style/TextbookButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="🌅 Chân trời sáng tạo" />

                <Button
                    android:id="@+id/buttonKetNoi"
                    style="@style/TextbookButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔗 Kết nối tri thức" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Selected Book Display -->
        <androidx.cardview.widget.CardView
            android:id="@+id/selectedBookLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@drawable/selected_book_gradient">

                <ImageView
                    android:id="@+id/imageViewBook"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:src="@drawable/book_image"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rounded_corner_background"
                    android:elevation="4dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📚 Sách đã chọn"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_white"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textViewSelectedInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sách đã chọn"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_white"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👆 Nhấn để mở sách"
                        android:textSize="14sp"
                        android:textColor="@color/text_white_secondary"
                        android:alpha="0.9" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
